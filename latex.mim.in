(input-method en latex)

(description "Input method for LaTeX symbols using ibus-table")

(title "LaTeX")

(include (t nil table-util) map)

(module
 (libmimx-table open lookup init fini))

(macro
 (lookup
  (set K @@) (sub K 1) (call libmimx-table lookup ascii select)))

(state
 (init
  (t (call libmimx-table open ibus "@ibus_table_dir@/latex.db" 2))
  (ascii (lookup)))

 (ascii
  (ascii (lookup)))

 (select
  (choose (hide) (shift init))
  (change-candidate)
  (backspace (undo K))
  (commit-preedit (shift init))
  (ascii (lookup))))

